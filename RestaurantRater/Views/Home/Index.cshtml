@{
    ViewBag.Title = "Home Page";

    var allRatings = new Dictionary<int, string> { { 1, "The worst" },
        { 2, "Better than worst" },
        { 3, "Okay" },
        { 4, "I like it" },
        { 5, "The best!!" } };
}

<div class="jumbotron text-center">
    <h1>Restaurant Rater</h1>
    <p class="lead">Web application for rating local restaurants.</p>
    <p><img src="~/assets/restaurantrating.png" /></p>
    <p>
        @Html.ActionLink("Rate Restaurants", "Index", "Restaurant")
    </p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Rate a Restaurant</h2>
        <p>
            Use this application to help promote restaurants that wow you and help others know the ones to avoid.
        </p>
        @Html.ActionLink(HttpUtility.HtmlDecode("Create A New Rating &raquo;"), "Create", "Restaurant", null, new { @class = "btn btn-default" })
    </div>
    <div class="col-md-4">
        <h2>See Ratings</h2>
        <p>View all currently rated restaurants. Is your fav spot missing? Help us keep the most updated list!</p>
        @Html.ActionLink(HttpUtility.HtmlDecode("Check Ratings &raquo;"), "Index", "Restaurant", null, new { @class = "btn btn-default" })
    </div>
    <div class="col-md-4">
        <h2>What Ratings Mean</h2>
        <p>The best rating a restaurant can receive is a 5. Ratings are a scale from low to high, 1 to 5. Please rate accordingly.</p>

        <div id="carouselRestaurants" class="carousel slide text-center" data-ride="carousel">
            <div class="carousel-inner">

                <div class="item active">
                    <div class="item-caption">
                        <h3>Rating</h3>
                        <p>What to Expect</p>
                    </div>
                </div>

                @foreach (var entry in allRatings)
                {
                    <div class="item">
                        <div class="item-caption">
                            <h2>@Html.DisplayFor(modelObj => entry.Key)</h2>
                            <h4>@Html.DisplayFor(modelObj => entry.Value)</h4>
                        </div>
                    </div>
                }
            </div>

        <a class="left carousel-control" href="#carouselRestaurants" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carouselRestaurants" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>
        </div>
    </div>
</div>